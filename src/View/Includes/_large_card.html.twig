<div class="col-lg-12 column">
	<div class="card card-recipe large-card mx-3">
		<img src="{{ recipe.image }}" class="card-img img-recipe" alt="not">
		<div class="card-body d-flex flex-column justify-content-center align-items-center pb-5">
			<p class="card-secondary-title time m-3">Cuisson : {{ recipe.cooking_time }}
				min</p>
			<h3 class="ingredient mt-4 mb-3">Ingr√©dients</h3>
			<ul class="ps-0 text-center">
				{% for ingredient in ingredients %}
					<li>{{ ingredient.quantity }}
						{{ ingredient.name }}</li>
				{% endfor %}
			</ul>
			<div>
				<h3 class="text-center mt-4 mb-3" >Recette</h3>
				<p class="text-left description p-3">{{ recipe.description }}</p>
			</div>			
            <a href="/timer?id={{ recipe.id }}" class="btn btn-circle btn-play mt-3 d-flex align-items-center justify-content-center"><img src="/assets/images/play.svg" alt="play" class="ps-1"></a>
            <div class="m-3 play">Play!</div>
		</div>
	</div>
</div>
