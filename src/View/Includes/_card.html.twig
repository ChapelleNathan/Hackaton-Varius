<div class="col-sm-6 col-lg-4 column">
	<div class="card card-recipe mx-3 text-center">
		<img src="{{ recipe.image }}" class="card-img img-recipe" alt="not">
		<div class="card-body d-flex flex-column justify-content-center align-items-center pb-5">
			<h3 class="card-title mt-2">{{ recipe.name }}</h3>
			<p class="card-secondary-title">{{recipe.cooking_time}}
				min</p>
			<a href="recipes/show?{{ recipe.id }}" class="btn btn-circle btn-play mt-3 d-flex align-items-center justify-content-center"><img src="/assets/images/play.svg" alt="play" class="ps-1"></a>
		</div>
	</div>
</div>
