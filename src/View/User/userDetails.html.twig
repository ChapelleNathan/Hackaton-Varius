{% extends "layout.html.twig" %}
{% block stylesheet %}
<link rel="stylesheet" href="assets/css/userDetails.css">
{% endblock %}
{% block content %}
<div class="container text-center">
    <div class="row">
        <div class="col">
            <h1 class="m-5">My Profile</h1>
        </div>
    </div>
    <div class="row d-flex justify-content-center mb-5 mt-1">
        <div class="card">
            <div class="card-body">
                <div class="profile-picture mb-3">
                    {% if user.profile_picture != null %}
                    <img src="/uploads/{{ user.profile_picture }}"
                        alt="profile picture of {{ user.lastname ~ user.first.name }}">
                    {% else %}
                    <svg xmlns="http://www.w3.org/2000/svg" width="70" height="70" fill="currentColor"
                        class="bi bi-person-circle" viewBox="0 0 16 16">
                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                        <path fill-rule="evenodd"
                            d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                    </svg>
                    {% endif %}
                </div>
                <h2 class="username">{{ user.lastname ~ ' ' ~ user.firstname }}</h2>
            </div>
            <div class="playlist">
                <h3>My playlist</h3>
                <form action="" method="post">
                    <div class="btn-group d-flex flex-column  my-3 gap-3 " role="group"
                        aria-label="Basic checkbox toggle button group">
                        {% for playlist in playlists %}
                        <input type="radio" class="btn-check" name="btnradio" id="{{ playlist.name }}" autocomplete="off"
                            value="{{ playlist.id }}" {% if user.playlist_id == playlist.id %} checked {% endif %}>
                        <label
                            class="btn btn-dark btn-outline-danger rounded-pill d-flex justify-content-center align-items-center radio-style"
                            for="{{ playlist.name }}">{{ playlist.name
                            }}</label>
                        {% endfor %}
                    </div>
                    <button class="btn btn-outline-danger mb-3" id="validate">Validate</button>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
{% endblock %}